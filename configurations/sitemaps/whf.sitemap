					Chart item=Humidity_thermo_FF_Living period=D refresh=3600 visibility=[Humidity_FF_Living_Chart_Period==1]
					Chart item=Humidity_thermo_FF_Living period=W refresh=3600 visibility=[Humidity_FF_Living_Chart_Period==2]
				}
			        Frame {
				    Switch item=Weather_Chart_Period label="Outdoor (from yahoo)" mappings=[0="Hour", 1="Day", 2="Week"]
