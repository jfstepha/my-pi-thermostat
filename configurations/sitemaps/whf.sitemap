sitemap whf label="Main Menu"
{
	Frame label="Whitehall Farm" {
		
		Text label="First Floor" icon="firstfloor"{
			Text label="Living Room" icon="firstfloor" {
				Frame label="Thermostat" {
					Text item=Temperature_FF_Living3
					Text item=Temperature_FF_Living
					Text item=Temperature_FF_Living2
					Text item=Temperature_FF_MBR
                                        Text item=Humidity_thermo_FF_Living
                                        Text item=HeatIndex_FF_Living
