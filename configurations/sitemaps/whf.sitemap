                                        Text item=Cool_FF_Living
                                        Text item=Heat_FF_Living
                                        Text item=Daemon_FF_Living
				}
				Frame label="Living Room Temp" {
					Switch item=Temp_LR_Chart_Period label="Living Room" mappings=[0="Hour", 1="Day", 2="Week"]
