			        Frame {
				    Switch item=Uptime_Period label="Uptime" mappings=[0="Hour", 1="Day", 2="Week"]
				    Chart item=Uptime_thermo_FF_Living period=h refresh=600 visibility=[Uptime_Period==0, Uptime_Period=="Uninitialized"]
				    Chart item=Uptime_thermo_FF_Living period=D refresh=3600 visibility=[Uptime_Period==1]
				    Chart item=Uptime_thermo_FF_Living period=W refresh=3600 visibility=[Uptime_Period==2]
			       }
			}
